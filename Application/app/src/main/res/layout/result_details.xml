<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".DiseaseDetailsActivity">



    <TextView
        android:id="@+id/disease_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:fontFamily="@font/sebang_gothic_bold"
        android:gravity="center"
        android:text="text for TITLE"
        android:background="@color/main_color"/>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="15dp"
        android:lineSpacingExtra="4dp"
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:fontFamily="@font/suit_regular"
        android:text="너와 나누고 했던 수줍었던 얘기들 너는 나를 쉬게하고 맘에 넘실 거리던 웃음 자꾸 내게 기웃대던 시선 살짝 맞닿는 어깨 스치는 손끝 ?와 하께 나란히 걷고 ㄱ콧노래도 흠흠흠 빰빰 빰바라랄밤"
        android:scrollbars="vertical"/>


</LinearLayout>